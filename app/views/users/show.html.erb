<% provide :title, @user.name %>
<section class="py-2">
  <div class="container">
    <div class="top-introduce py-2">
      <div class="row">
        <div class="col-md-6 d-flex align-items-center">
          <%= render "users/user_info_card", user: @user %>
        </div>
        <div class="col-md-6">
          <%= image_tag "svg/user_info.svg", class: "my-3", width: "100%" %>
        </div>
      </div>
    </div>
  </div>
  <div class="container border-top mt-4 pt-5">
    <h5 class="font-weight-semibold mb-5"><%= t ".your_campaigns" %></h5>
    <%= render "shared/list_campaigns", items: @campaigns %>
    <div class="paginator-container">
      <%= paginate @campaigns %>
    </div>
  </div>
</section>
