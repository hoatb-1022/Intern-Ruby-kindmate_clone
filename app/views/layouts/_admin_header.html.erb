<header class="navbar navbar-expand-lg navbar-kindmate navbar-dark navbar-kindmate__dark fixed-top">
  <div class="container">
    <%= link_to root_url, class: "navbar-brand kindmate-logo" do %>
      <%= image_tag "logo-white.svg" %>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav navbar-nav--left">
        <li class="nav-item">
          <%= link_to t("_header.manage_users"), admin_users_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t("_header.manage_campaigns"), admin_campaigns_path, class: "nav-link" %>
        </li>
      </ul>
      <ul class="navbar-nav ml-auto">
        <%= render "shared/header_user_info", user: current_user %>
      </ul>
    </div>
  </div>
</header>
