<% if @comment.errors.blank? %>
  toastr.success(I18n.t("comments.success_updated"))
  $('#comments-container').html(
    "<%= j render "comments/list_comments", comments: @comments, remote: true %>"
  )
  $(`#comment_${<%= @comment.id %>} .submit-comment .btn-cancel-edit`).trigger('click')
<% else %>
  toastr.error(I18n.t("comments.failed_updated"))
<% end %>
