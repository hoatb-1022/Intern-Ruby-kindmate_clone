<% if @comment.errors.blank? %>
  toastr.success(I18n.t("comments.success_commented"))
  $('#comments-container').html(
    "<%= j render "comments/list_comments", comments: @comments, remote: true %>"
  )
  $('#comment-title-size').html(
    "(<%= @campaign.comments.size %>)"
  )
  $('#new_comment')[0].reset()
<% else %>
  toastr.error(I18n.t("comments.failed_commented"))
<% end %>
