<% provide :title, t(".title") %>
<div id="donations--new" class="container">
  <div class="row">
    <%= render @campaign, classes: "col-lg-3" %>
    <div class="col-lg-9">
      <div class="card shadow border-0 p-3 p-md-4">
        <h3 class="mb-4 font-weight-bold"><%= t ".title" %></h3>
        <%= form_for [@campaign, @donation] do |f| %>
          <%= render "shared/error_messages", object: f.object %>
          <div class="select-payment">
            <div class="form-row">
              <div class="form-group col-md-4">
                <div class="payment-box active" data-active="transfer">
                  <%= f.label :payment_type, value: "transfer" do %>
                    <div class="media align-items-center p-3">
                      <%= image_tag "svg/transfer.svg" %>
                      <div class="media-body ml-3">
                        <%= t ".transfer" %>
                      </div>
                    </div>
                  <% end %>
                  <%= f.radio_button :payment_type, "transfer", checked: true, hidden: true %>
                </div>
              </div>
              <div class="form-group col-md-4">
                <div class="payment-box" data-active="payment">
                  <%= f.label :payment_type, value: "payment" do %>
                    <div class="media align-items-center p-3">
                      <%= image_tag "svg/payment.svg" %>
                      <div class="media-body ml-3">
                        <%= t ".payment" %>
                      </div>
                    </div>
                  <% end %>
                  <%= f.radio_button :payment_type, "payment", hidden: true %>
                </div>
              </div>
              <div class="form-group col-md-4">
                <div class="payment-box" data-active="cash">
                  <%= f.label :payment_type, value: "cash" do %>
                    <div class="media align-items-center p-3">
                      <%= image_tag "svg/cash.svg" %>
                      <div class="media-body ml-3">
                        <%= t ".cash" %>
                      </div>
                    </div>
                  <% end %>
                  <%= f.radio_button :payment_type, "cash", hidden: true %>
                </div>
              </div>
              <div class="form-group mt-3 col-md-12">
                <%= f.label :amount %>
                <div class="input-group input-donate-amount">
                  <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                  </div>
                  <%= f.number_field :amount,
                                     min: Settings.currency.min,
                                     step: Settings.currency.step,
                                     value: Settings.donation.default_amount,
                                     class: "form-control"
                  %>
                </div>
              </div>
              <div class="form-group col-md-12">
                <%= f.label :message %>
                <%= f.text_area :message, class: "form-control" %>
              </div>
            </div>
            <div class="d-flex justify-content-between mt-3">
              <%= link_to t("global.cancel"), @campaign, class: "btn btn-danger" %>
              <%= f.submit t(".title"), data: {confirm: t("global.you_sure?")}, class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
